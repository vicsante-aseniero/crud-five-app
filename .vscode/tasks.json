{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
        "label": "build api",
        "command": "dotnet",
        "type": "process",
        "args": [
            "build",
            "${workspaceFolder}/api/crud-api.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary;ForceNoAlign"
        ],
        "problemMatcher": "$msCompile",
        "options": {
            "cwd": "${workspaceFolder}/api",
            "webroot": "${workspaceFolder}/api",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/api/Views"
            }
        }
    },
    {
        "label": "publish api",
        "command": "dotnet",
        "type": "process",
        "args": [
            "publish",
            "${workspaceFolder}/api/crud-api.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary;ForceNoAlign"
        ],
        "problemMatcher": "$msCompile",
        "options": {
            "cwd": "${workspaceFolder}/api",
            "webroot": "${workspaceFolder}/api",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/api/Views"
            }
        }
    },
    {
        "label": "test api",
        "command": "dotnet",
        "type": "process",
        "args": [
            "test",
            "${workspaceFolder}/api/crud-api.csproj",
            "--no-build",
            "--verbosity:normal"
        ],
        "problemMatcher": "$msCompile",
        "options": {
            "cwd": "${workspaceFolder}/api",
            "webroot": "${workspaceFolder}/api",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/api/Views"
            }
        }
    },
    {
        "label": "watch api",
        "command": "dotnet",
        "type": "process",
        "args": [
            "watch",
            "run",
            "--project",
            "${workspaceFolder}/api/crud-api.csproj"
        ],
        "problemMatcher": "$msCompile",
        "options": {
            "cwd": "${workspaceFolder}/api",
            "webroot": "${workspaceFolder}/api",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/api/Views"
